            android:theme="@style/FullScreen" />
        <activity
            android:name="com.naufaldystd.curahanmental.ui.auth.login.LoginActivity"
            android:exported="false"
            android:theme="@style/FullScreen" />
        <activity
            android:name="com.naufaldystd.curahanmental.ui.welcome.SplashActivity"
            android:exported="true"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.naufaldystd.curahanmental.ui.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name" />
