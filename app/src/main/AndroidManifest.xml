    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CurahanMental">
        <activity
            android:name="com.naufaldystd.curahanmental.ui.journal.detail.EditJournalActivity"
            android:exported="false" />
        <activity
            android:name="com.naufaldystd.curahanmental.ui.journal.detail.DetailJournalActivity"
            android:exported="false" />
        <activity
            android:name="com.naufaldystd.curahanmental.ui.home.tips.DetailTipsActivity"
            android:exported="false" />
        <activity
            android:name="com.naufaldystd.curahanmental.ui.home.tips.TipsActivity"
            android:exported="true" />
        <activity
            android:name="com.naufaldystd.curahanmental.ui.home.articles.ArticleActivity"
            android:exported="true" />
